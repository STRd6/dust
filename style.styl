*
  box-sizing: border-box

html
  height: 100%

body
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-weight: 300
  font-size: 18px
  height: 100%
  margin: 0
  overflow: hidden
  user-select: none

.center
  bottom: 0
  position: absolute
  top: 0
  left: 0
  right: 0
  margin: auto

.options
  background-color: rgba(0, 0, 0, 0.875)
  color: white
  padding: 0 20px
  position: absolute
  width: 100%
  height: 100%
  top: 100%
  z-index: 9000

  transition-duration: 0.3s

  &.up
    top: 0

  .key
    display: inline-block
    padding-right: 20px
    text-align: right
    vertical-align: top
    width: 160px
